                                        <li class="nav-item"> <a class="nav-link" asp-controller="Projects" asp-action="Create">New Project...</a></li>

                                    }
                                    @if (User.IsInRole(Roles.Admin.ToString()) == true)
                                    {
                                        <li class="nav-item"> <a class="nav-link" asp-controller="Projects" asp-action="MyProjects">My Projects</a></li>

                                    }
                                    <li class="nav-item"> <a class="nav-link" asp-controller="Projects" asp-action="AllProjects">All Projects</a></li>
                                    <li class="nav-item"> <a class="nav-link" asp-controller="Projects" asp-action="ArchivedProjects">Archived Projects</a></li>

                                    @if (User.IsInRole(Roles.Admin.ToString()) == true)
                                    {
                                        <li class="nav-item"> <a class="nav-link" asp-controller="Projects" asp-action="UnassignedProjects">Unassigned Projects</a></li>

                                    }
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="collapse" href="#maps" aria-expanded="false" aria-controls="maps">
                                <i class="ti-ticket menu-icon"></i>
                                <span class="menu-title">Tickets</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="maps">
                                <ul class="nav flex-column sub-menu">

                                    <li class="nav-item"> <a class="nav-link" asp-controller="Tickets" asp-action="Create">New Ticket....</a></li>

                                    @if (User.IsInRole(Roles.Admin.ToString()) == true)
                                    {
                                        <li class="nav-item"> <a class="nav-link" asp-controller="Tickets" asp-action="MyTickets">My Tickets</a></li>

                                    }
                                    <li class="nav-item"> <a class="nav-link" asp-controller="Tickets" asp-action="AllTickets">All Tickets</a></li>
                                    <li class="nav-item"> <a class="nav-link" asp-controller="Tickets" asp-action="ArchivedTickets">Archived Tickets</a></li>

                                    @if (User.IsInRole(Roles.Admin.ToString()) || User.IsInRole(Roles.ProjectManager.ToString()))
                                    {
                                        <li class="nav-item"> <a class="nav-link" asp-controller="Tickets" asp-action="UnassignedTickets">Unassigned Tickets</a></li>

                                    }

                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="ti-bell menu-icon"></i>
                                <span class="menu-title">Notifications</span>
                            </a>
                        </li>
                    }
                </ul>

            </nav>
            <!-- partial -->
            <div class="main-panel">
                @RenderBody()
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2021 <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrapdash</a>. All rights reserved.</span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="ti-heart text-danger ms-1"></i></span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>

        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../../vendors/chart.js/Chart.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/template.js"></script>
    <script src="../../js/settings.js"></script>
    <script src="../../js/todolist.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="~/js/data-table.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="../../js/dashboard.js"></script>
    <!-- End custom js for this page-->
    <!--summernote-->
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <!--End summernote-->

    <!--PopperJs-->
    <scripts src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></scripts>



    @await RenderSectionAsync("Scripts", required: false)
