@model TheBugTracker.Models.Company

@{
    ViewData["Title"] = "Details";
}


<div class="content-wrapper">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card">
                    <h4 class="card-header bg-info text-white">Company Details</h4>

                    <div class="card-body">
                        <h3> @Model.Name Details</h3>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </dl>

                        <div>
                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                            <a class="btn btn-sm btn-warning" asp-action="Index">Back to List</a>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
    </div>


