@model TheBugTracker.Models.Company

@{
    ViewData["Title"] = "Edit";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3>Update Company</h3>
                    <p class="card-description">
                        Update company that will be submitting tickets to be resolved
                    </p>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"><strong>Name</strong></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"><strong>Description</strong></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary btn-sm" /> |
                            <a class="btn btn-warning btn-sm" asp-action="Index">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



<script>
    $('#Description').summernote({
        placeholder: 'Description',
        tabsize: 2,
        height: 200
    });
</script>

}
