@model TheBugTracker.Models.ViewModels.AssignPMViewModel


@{ 
    ViewData["Title"] = "Assign PM";
}



<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card">
                        <h4 class="card-header bg-success text-white">Project</h4>
                        <div class="card-body">
                            <form method="post" asp-action="AssignPM" asp-controller="Projects">
                                <input hidden asp-for="Project.Id" />

                                <h2>@Model.Project.Name</h2>

                                <p>@Model.Project.Description</p>
                                <div class="form-group">
                                    <label class="control-label">Select Project Manager</label>
                                    <select class="form-select mb-3" asp-for="PMID" asp-items="@Model.PMList">
                                        <option disabled selected>Select</option>
                                    </select>
                                    <input type="submit" value="Assign" class="btn btn-sm btn-primary" />
                                    <a asp-action="UnassignedProjects" class="btn btn-warning btn-sm">Back To List</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>




