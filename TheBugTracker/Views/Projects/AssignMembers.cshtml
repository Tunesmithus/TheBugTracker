@model TheBugTracker.Models.ViewModels.ProjectMembersViewModel


@{
    ViewData["Title"] = "Assign Member";
}

<div class="container">
    <h2>Assign Members for @Model.Project.Name</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>@Model.Project.Name</h3>

            <div class="card">
                <div class="card-header">
                    <label class="control-label">Assign team members for Project</label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignMembers" asp-controller="Projects">
                        <input hidden asp-for="Project.Id" />
                        <div class="form-group mb-3">
                            <select required asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.Users" multiple="multiple">
                                <option disabled selected></option>
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn alert-primary" value="Assign Users" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-id="@Model.Project.Id">Back To List</a>
            </div>

        </div>
    </div>
</div>
