@model TheBugTracker.Models.ViewModels.ProjectMembersViewModel


@{
    ViewData["Title"] = "Assign Member";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6">

            <div class="card">

                <div class="card-header bg-info text-white">
                    <label class="control-label">Assign team members for Project</label>
                </div>
                <div class="card-body">
                    <h3 class="mt-2">@Model.Project.Name</h3>

                    <form method="post" asp-action="AssignMembers" asp-controller="Projects">
                        <input hidden asp-for="Project.Id" />
                        <div class="form-group mb-3">
                            <select required asp-for="@Model.SelectedUsers" class="form-select" asp-items="@Model.Users" multiple="multiple">
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn alert-primary btn-sm" value="Assign Users" /> |
                                <a class="btn btn-warning btn-sm" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Project.Id">Back To Details</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div>
            </div>

        </div>
    </div>
</div>