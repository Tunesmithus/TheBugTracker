@model TheBugTracker.Models.ViewModels.AssignDeveloperViewModel



<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card">
                        <h4 class="card-header bg-success text-white">Assign Developer</h4>
                        <div class="card-body">
                            <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets" enctype="multipart/form-data">
                                <input asp-for="Ticket.Id" hidden />
                                <h4>Description: @Model.Ticket.Description</h4>

                                <div class="form-group">
                                    <label class="form-label">Select Developers</label>
                                    <select required asp-for="DeveloperId" class="form-select" asp-items="@Model.Developers">
                                        <option disabled selected>Select Developer</option>
                                    </select>
                                </div>
                                <div class="form-group mt-3">
                                    <input type="submit" value="Assign" class="btn btn-primary btn-sm" />
                                    <a class="btn btn-warning btn-sm" asp-action="UnassignedTickets" asp-controller="Tickets">Unassigned Tickets</a>
                                </div>

                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>