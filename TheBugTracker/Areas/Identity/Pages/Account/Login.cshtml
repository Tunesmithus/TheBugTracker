@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
    Layout = "~/Views/Shared/_LogInFullPartial.cshtml";
}


<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0 bg-dark bg-gradient">
            <div class="row w-100 mx-0">
                <div class="col-lg-5 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo mb-3 text-center">
                            <img src="~/img/LoginRegisterLogo.png" />
                            @*<img src="../../../../images/logo.svg" alt="logo">*@
                        </div>
                        <h4>Hello! let's get started</h4>
                        <h6 class="font-weight-light">Sign in to continue.</h6>
                        <form class="pt-3" id="account" method="post">
                            <div class="form-group">
                                <label class="form-label" asp-for="Input.Email">Username</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="ti-user text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Input.Email" type="text" class="form-control form-control-lg border-left-0" placeholder="Username">
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="ti-lock text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Password">
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>

                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label asp-for="Input.RememberMe" class="form-check-label text-muted">
                                        <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        Keep me signed in
                                    </label>
                                </div>
                                <a asp-page="./ForgotPassword" class="auth-link text-black">Forgot password?</a>
                            </div>
                            <div class="my-3">
                                <button type="submit" class="btn btn-block btn-dark btn-sm font-weight-medium auth-form-btn"><i class="bi bi-door-open"></i>LOGIN</button>
                            </div>

                            <div class="text-center mt-4 font-weight-light">
                                Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Create Account</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>



